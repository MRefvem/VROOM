@*Declaring this page to use a list of employees*@
@model VROOM.ViewModels.AllData

<!Doctype html>

<html>
<head>
    <link rel="stylesheet" href="~/Styles/reset.css" type="text/css" />
    <link href="https://fonts.googleapis.com/css2?family=Krona+One&family=Open+Sans+Condensed:wght@300&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans+Condensed:wght@300&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/Styles/style.css" type="text/css" />
    <title>VROOM App</title>
</head>

<body>
    <header>
        <h1>VROOM - Virtual Remote Open Office Manager</h1>
        <a href="Home">Home</a>
        <a href="Data">Data</a>
        <a href="About">About Us</a>
    </header>
    <main>
        @*Razor Syntax*@

        @foreach (var employee in Model.EmployeeList)
        {
            <h3>@employee.FirstName @employee.LastName</h3>
            <p>Title: @employee.Title</p>
            <p>Department: @employee.Dept</p>
            <p>Status: @employee.Status</p>
            <p>Branch: @employee.BranchName</p>
            <hr />
        }

        @foreach (var equipment in Model.EquipmentList)
        {
            <h3>@equipment.Name</h3>
            <p>Value: $@equipment.Value</p>
        }
    </main>
    <footer>

    </footer>
</body>
</html>
